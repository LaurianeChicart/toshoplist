{% extends authentified == false
? 'security/base_front.html.twig'
: 'base.html.twig' %}


{% block title %}ToShopList- Contact
{% endblock %}


{% block body %}
    <div class="corpus">
        <div class="col-lg-6 mx-auto">
            <h3 class="title">Contact</h3>
            <p>Contactez-nous, nous vous répondrons dans les plus brefs délais.</p><br>
            <div>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.email) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.subject) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.message) }}
                </div>
                {{ form_end(form) }}
            </div><br>
        </div>
    </div>
    {% block javascripts %}
        <script src="{{ asset('js/contact.min.js') }}"></script>
        <script>
            contactForm.constructor($("form[name='form']"), "form_email", "form_subject", "form_message");
        </script>

    {% endblock %}


{% endblock %}
