{% extends 'base.html.twig' %}

{% block title %}ToShopList - Modifier mes donn√©es
{% endblock %}

{% block body %}
    <h2>Modifier mes identifiants</h2>
    {{ form_start(form) }}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    {{ form_row(form.email, {'attr': {'placeholder': '{{ app.user.username }}'} }) }}
    {% if errorMessage %}
        <span class="invalid-feedback d-block">
            <span class="d-block">
                <span class="form-error-icon badge badge-danger text-uppercase">Error</span>
                <span class="form-error-message">{{ errorMessage }}</span>
            </span>
        </span>


    {% endif %}

    {{ form_row(form.current_password) }}
    {{ form_row(form.new_password) }}
    {{ form_row(form.confirm_new_password) }}

    <button class="btn btn-success" type="submit">Enregistrer les modifications</button>
    {{ form_end(form) }}


{% endblock %}
